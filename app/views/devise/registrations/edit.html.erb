<div class = "container-fluid">

    <div class = "general-row">

        <div class = "general-form">

        <h2>Edit Yaw Account</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-inline"}) do |f| %>
          <%= devise_error_messages! %>

          <% if current_user.avatar.url.present? %>

            <div class = "profile-container">

              <%= image_tag current_user.avatar.url, class: "avatar" %>

            </div>

          <% end %>

          <br>

          <div class = "form-group">
          <%= f.file_field :avatar %>
          </div>

          <br>

          <%= f.check_box :remove_avatar, style: "width: 10px; transform: scale(2); -webkit-transform: scale(2);" %>
          <%= f.label "Remove Avataw", style: "padding-left: 20px; font-size: 1.25em;" %>
          <br><br>


          <div class="form-group">
            <%= f.text_field :first_name, autofocus: true, class: 'form-control', style: "width: 30vw;" %>
          </div>

          <br><br>

          <div class="form-group">
            <%= f.text_field :location, autofocus: true, class: 'form-control', style: "width: 30vw;" %>
          </div>

          <br><br>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: 'form-control', style: "width: 30vw;" %>
          </div>

          <br><br>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: "New Password (Can be blank)", class: 'form-control', style: "width: 30vw;" %>
          </div>

          <br><br>

          <div class="form-group">
            <%= f.password_field :password_confirmation, placeholder: "Confirm New Password", autocomplete: "off", class: 'form-control', style: "width: 30vw;" %>
          </div>

          <br><br>

          <div class="form-group">
            <%= f.password_field :current_password, placeholder: "* Current Password (Required)", autocomplete: "off", class: 'form-control', style: "width: 30vw;" %>
          </div>

          <br><br>
          <br><br>

          <div class="actions">
            <%= f.submit "Update Mai Account", class: "btn btn-primary btn-md" %>
          </div>

        <% end %>
        <br>

        <%= button_to "Cancel Mai Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary btn-md" %></p>

        <br>

      </div>

  </div>

</div>
